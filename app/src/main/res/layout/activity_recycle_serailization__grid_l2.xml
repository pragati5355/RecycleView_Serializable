<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray"
    tools:context=".RecycleSerailization_GridL2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@color/white"
        android:layout_marginRight="20dp"
        android:background="@drawable/buttonround">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill the Product Details"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"/>
    <ImageView
        android:id="@+id/productimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kettel"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="500dp"
        />

    <Button
        android:id="@+id/productbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Image"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:layout_marginVertical="220dp"
        android:layout_marginLeft="250dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name :"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginVertical="100dp"/>

    <EditText
        android:id="@+id/productname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Name"
        android:textSize="12sp"
        android:layout_marginVertical="88dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:layout_marginLeft="113dp"
        android:layout_marginRight="140dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price :"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginVertical="155dp"
        />
    <EditText
        android:id="@+id/productprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Price"
        android:textSize="12sp"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:layout_marginVertical="145dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Colour :"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginVertical="195dp"/>

    <EditText
        android:id="@+id/productcolour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Colour"
        android:textSize="12sp"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:layout_marginVertical="185dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pattern :"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginVertical="245dp"/>

    <EditText
        android:id="@+id/productpattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Pattern"
        android:textSize="12sp"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:layout_marginVertical="235dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Material :"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginVertical="295dp"/>

    <EditText
        android:id="@+id/productmaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Material"
        android:textSize="12sp"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:layout_marginVertical="288dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content :"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="310sp"/>

    <EditText
        android:id="@+id/productcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="No .of Content"
        android:textSize="12sp"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:layout_marginVertical="330dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Style :"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="380dp"/>

    <EditText
        android:id="@+id/productstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Style"
        android:textSize="12sp"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="110dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size And Fit :"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginVertical="430dp"/>

    <EditText
        android:id="@+id/productdimension"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dimension(Height*Width*Depth)"
        android:textSize="12sp"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:layout_marginVertical="420dp"
        android:layout_marginLeft="95dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Style Note : "
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="490dp"/>
    <EditText
        android:id="@+id/productnote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Note"
        android:textSize="15sp"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:layout_marginTop="510dp"
        android:layout_marginLeft="80dp"/>

    <Button
        android:id="@+id/ButtonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:backgroundTint="@color/black"
        android:layout_marginVertical="630dp"
        android:layout_marginHorizontal="150dp"/>


    </RelativeLayout>
</RelativeLayout>